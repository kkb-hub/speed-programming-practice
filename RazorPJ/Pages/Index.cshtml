@page
@using Razor.Models
@using Razor.Controllers
@using Entityclass
@using FSESpeedProgrammingLib.Helpers;

<h2>Home</h2>

@(Html.DevExtreme().DataGrid<Tb1>()
    .ShowBorders(true)
    .DataSource(d => d.Mvc())
    .Build("PCWBSwithBase", "Get", 10)
    .Columns(columns => {
        columns.AddFor(m => m.PK).AllowEditing(false);
        columns.AddFor(m => m.b);
        columns.AddFor(m => m.c);
        columns.AddFor(m => m.d);
        columns.AddFor(m => m.e);
        columns.AddFor(m => m.FKTb2).AddLookup("EntityBwithBase", "Get", "ee", "TB2");
    })
    .Editing(e => e.AllowAdding(true).AllowUpdating(true).AllowDeleting(true))
    .Export(e => e.Enabled(true))
)

@(Html.DevExtreme().DataGrid<Tb2>()
    .ShowBorders(true)
    .DataSource(d => d.Mvc())
    .Build("EntityBwithBase", "Get", 10)
    .Columns(columns => {
        columns.AddFor(m => m.PK).AllowEditing(false);
        columns.AddFor(m => m.aa);
        columns.AddFor(m => m.bb);
        columns.AddFor(m => m.cc);
        columns.AddFor(m => m.dd);
        columns.AddFor(m => m.ee);
    })
    .Editing(e => e.AllowAdding(true).AllowUpdating(true).AllowDeleting(true))
    .Export(e => e.Enabled(true))
)