@page
@using speed_programming_practice.Models
@using speed_programming_practice.Controllers
@using Entity_AClass

<h2>Home</h2>

@(Html.DevExtreme().DataGrid<Entity_A>()
    .ShowBorders(true)
    .DataSource(d => d.Mvc()
    .Controller("Entity_AwithBase")
        .LoadAction("Get")
        .InsertAction("Insert")
        .UpdateAction("Update")
        .DeleteAction("Delete")
        .Key("PK"))
    .Columns(columns => {
        columns.AddFor(m => m.FKEntityB);
        columns.AddFor(m => m.BBB);
    })
    .Editing(e => e.AllowAdding(true).AllowUpdating(true).AllowDeleting(true))
)